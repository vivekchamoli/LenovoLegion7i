<UserControl
    x:Class="LenovoLegionToolkit.WPF.Controls.Dashboard.EliteSystemMonitorControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:wpfui="http://schemas.lepo.co/wpfui/2022/xaml"
    Background="Transparent">

    <UserControl.Resources>
        <!-- Gradient Brushes for Modern Look -->
        <LinearGradientBrush x:Key="AccentGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#667eea" Offset="0" />
            <GradientStop Color="#764ba2" Offset="1" />
        </LinearGradientBrush>

        <LinearGradientBrush x:Key="SuccessGradient" StartPoint="0,0" EndPoint="1,0">
            <GradientStop Color="#11998e" Offset="0" />
            <GradientStop Color="#38ef7d" Offset="1" />
        </LinearGradientBrush>

        <LinearGradientBrush x:Key="WarningGradient" StartPoint="0,0" EndPoint="1,0">
            <GradientStop Color="#f2994a" Offset="0" />
            <GradientStop Color="#f2c94c" Offset="1" />
        </LinearGradientBrush>

        <LinearGradientBrush x:Key="DangerGradient" StartPoint="0,0" EndPoint="1,0">
            <GradientStop Color="#eb3349" Offset="0" />
            <GradientStop Color="#f45c43" Offset="1" />
        </LinearGradientBrush>

        <!-- Glassmorphism Effect -->
        <Style x:Key="GlassCard" TargetType="Border">
            <Setter Property="Background" Value="{DynamicResource ControlFillColorDefaultBrush}" />
            <Setter Property="BorderBrush" Value="{DynamicResource ControlStrokeColorDefaultBrush}" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="CornerRadius" Value="12" />
            <Setter Property="Padding" Value="24,20" />
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Black" Opacity="0.1" BlurRadius="16" ShadowDepth="2" Direction="270" />
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Metric Card Style -->
        <Style x:Key="MetricCard" TargetType="Border">
            <Setter Property="Background" Value="{DynamicResource LayerFillColorDefaultBrush}" />
            <Setter Property="BorderBrush" Value="{DynamicResource ControlStrokeColorDefaultBrush}" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="CornerRadius" Value="10" />
            <Setter Property="Padding" Value="16,12" />
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Black" Opacity="0.05" BlurRadius="8" ShadowDepth="1" Direction="270" />
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <StackPanel Margin="0,0,0,20">

        <!-- ═══════════════════════════════════════════════════════════════════════════════ -->
        <!-- HERO HEADER SECTION -->
        <!-- ═══════════════════════════════════════════════════════════════════════════════ -->
        <Border Style="{StaticResource GlassCard}" Margin="0,0,0,24">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <!-- Title Section -->
                <StackPanel Grid.Column="0" VerticalAlignment="Center">
                    <TextBlock FontSize="24" FontWeight="Bold" Foreground="{StaticResource AccentGradient}">
                        <Run Text="⚡ " />
                        <Run Text="LENOVO LEGION SYSTEM TOOLKIT" />
                    </TextBlock>
                    <TextBlock x:Name="_timestampText"
                               FontSize="12"
                               Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                               Text="Loading..."
                               Margin="0,6,0,0" />
                </StackPanel>

                <!-- System Health Badge -->
                <Border x:Name="_systemHealthBadge"
                        Grid.Column="1"
                        Background="{StaticResource SuccessGradient}"
                        CornerRadius="20"
                        Padding="20,10"
                        VerticalAlignment="Center">
                    <StackPanel Orientation="Horizontal">
                        <wpfui:SymbolIcon Symbol="CheckmarkCircle24"
                                          FontSize="18"
                                          Foreground="White"
                                          Margin="0,0,10,0" />
                        <TextBlock x:Name="_systemHealthText"
                                   FontSize="13"
                                   FontWeight="Bold"
                                   Foreground="White"
                                   Text="ALL SYSTEMS OPTIMAL"
                                   VerticalAlignment="Center" />
                    </StackPanel>
                </Border>
            </Grid>
        </Border>

        <!-- ═══════════════════════════════════════════════════════════════════════════════ -->
        <!-- CPU & GPU PERFORMANCE CARDS (SIDE BY SIDE) -->
        <!-- ═══════════════════════════════════════════════════════════════════════════════ -->
        <Grid Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="16" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!-- ═══════════════════════════════════════════════════════════════════════════════ -->
            <!-- CPU PERFORMANCE CARD -->
            <!-- ═══════════════════════════════════════════════════════════════════════════════ -->
            <Border Grid.Column="0" Style="{StaticResource GlassCard}">
                <StackPanel>
                    <!-- Header with Icon -->
                    <Grid Margin="0,0,0,16">
                        <StackPanel Orientation="Horizontal">
                            <wpfui:SymbolIcon Symbol="DesktopPulse20" FontSize="20" Foreground="{StaticResource AccentGradient}" Margin="0,0,10,0" />
                            <TextBlock FontSize="16" FontWeight="Bold" Text="CPU PERFORMANCE" VerticalAlignment="Center" />
                        </StackPanel>
                    </Grid>

                    <!-- CPU Info -->
                    <Border Style="{StaticResource MetricCard}" Margin="0,0,0,12">
                        <StackPanel>
                            <TextBlock FontSize="10" Foreground="{DynamicResource TextFillColorTertiaryBrush}" Text="PROCESSOR" />
                            <TextBlock x:Name="_cpuModel" FontSize="13" FontWeight="SemiBold" Text="Intel Core i9-14900HX" Margin="0,4,0,2" />
                            <TextBlock FontSize="10" Foreground="{DynamicResource TextFillColorSecondaryBrush}">
                                <Run Text="8 P-Cores • 16 E-Cores • 32 Threads" />
                            </TextBlock>
                        </StackPanel>
                    </Border>

                    <!-- Temperature Metric -->
                    <StackPanel Margin="0,0,0,14">
                        <Grid Margin="0,0,0,8">
                            <TextBlock FontSize="11" FontWeight="SemiBold" Foreground="{DynamicResource TextFillColorSecondaryBrush}" Text="TEMPERATURE" />
                            <TextBlock x:Name="_cpuTempValue" FontSize="20" FontWeight="Bold" HorizontalAlignment="Right" Text="45.2°C" />
                        </Grid>
                        <ProgressBar x:Name="_cpuTempBar" Style="{StaticResource EliteProgressBarCompact}" Foreground="{StaticResource WarningGradient}" Value="45" Maximum="100" />
                        <TextBlock x:Name="_cpuTempPercent" FontSize="10" Foreground="{DynamicResource TextFillColorTertiaryBrush}" Text="45.2% of max" Margin="0,4,0,0" />
                    </StackPanel>

                    <!-- Usage Metric -->
                    <StackPanel Margin="0,0,0,14">
                        <Grid Margin="0,0,0,8">
                            <TextBlock FontSize="11" FontWeight="SemiBold" Foreground="{DynamicResource TextFillColorSecondaryBrush}" Text="UTILIZATION" />
                            <TextBlock x:Name="_cpuUsageValue" FontSize="20" FontWeight="Bold" HorizontalAlignment="Right" Text="28.5%" />
                        </Grid>
                        <ProgressBar x:Name="_cpuUsageBar" Style="{StaticResource EliteProgressBarCompact}" Value="28.5" Maximum="100" />
                    </StackPanel>

                    <!-- Power & Frequency -->
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0">
                            <TextBlock FontSize="10" Foreground="{DynamicResource TextFillColorTertiaryBrush}" Text="POWER" />
                            <TextBlock x:Name="_cpuPowerValue" FontSize="18" FontWeight="Bold" Text="12.3W" Margin="0,4,0,0" />
                        </StackPanel>

                        <StackPanel Grid.Column="1" HorizontalAlignment="Right">
                            <TextBlock FontSize="10" Foreground="{DynamicResource TextFillColorTertiaryBrush}" Text="FREQUENCY" HorizontalAlignment="Right" />
                            <TextBlock x:Name="_cpuCurrentFreq" FontSize="18" FontWeight="Bold" Text="2.85 GHz" Margin="0,4,0,0" HorizontalAlignment="Right" />
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- ═══════════════════════════════════════════════════════════════════════════════ -->
            <!-- GPU PERFORMANCE CARD -->
            <!-- ═══════════════════════════════════════════════════════════════════════════════ -->
            <Border Grid.Column="2" Style="{StaticResource GlassCard}">
                <StackPanel>
                    <!-- Header with Icon -->
                    <Grid Margin="0,0,0,16">
                        <StackPanel Orientation="Horizontal">
                            <wpfui:SymbolIcon Symbol="DeveloperBoardLightning20" FontSize="20" Foreground="{StaticResource AccentGradient}" Margin="0,0,10,0" />
                            <TextBlock FontSize="16" FontWeight="Bold" Text="GPU PERFORMANCE" VerticalAlignment="Center" />
                        </StackPanel>
                    </Grid>

                    <!-- GPU Info -->
                    <Border Style="{StaticResource MetricCard}" Margin="0,0,0,12">
                        <StackPanel>
                            <TextBlock FontSize="10" Foreground="{DynamicResource TextFillColorTertiaryBrush}" Text="GRAPHICS CARD" />
                            <TextBlock x:Name="_gpuActive" FontSize="13" FontWeight="SemiBold" Text="NVIDIA RTX 4070" Margin="0,4,0,2" />
                            <TextBlock FontSize="10" Foreground="{DynamicResource TextFillColorSecondaryBrush}">
                                <Run x:Name="_gpuMode" Text="Hybrid Mode" />
                                <Run Text=" • 8GB GDDR6" />
                            </TextBlock>
                        </StackPanel>
                    </Border>

                    <!-- Temperature Metric -->
                    <StackPanel Margin="0,0,0,14">
                        <Grid Margin="0,0,0,8">
                            <TextBlock FontSize="11" FontWeight="SemiBold" Foreground="{DynamicResource TextFillColorSecondaryBrush}" Text="TEMPERATURE" />
                            <TextBlock x:Name="_gpuTempValue" FontSize="20" FontWeight="Bold" HorizontalAlignment="Right" Text="38.1°C" />
                        </Grid>
                        <ProgressBar x:Name="_gpuTempBar" Style="{StaticResource EliteProgressBarCompact}" Foreground="{StaticResource WarningGradient}" Value="42.3" Maximum="100" />
                        <TextBlock x:Name="_gpuTempPercent" FontSize="10" Foreground="{DynamicResource TextFillColorTertiaryBrush}" Text="42.3% of max" Margin="0,4,0,0" />
                    </StackPanel>

                    <!-- Usage Metric -->
                    <StackPanel Margin="0,0,0,14">
                        <Grid Margin="0,0,0,8">
                            <TextBlock FontSize="11" FontWeight="SemiBold" Foreground="{DynamicResource TextFillColorSecondaryBrush}" Text="UTILIZATION" />
                            <TextBlock x:Name="_gpuUsageValue" FontSize="20" FontWeight="Bold" HorizontalAlignment="Right" Text="12.5%" />
                        </Grid>
                        <ProgressBar x:Name="_gpuUsageBar" Style="{StaticResource EliteProgressBarCompact}" Value="12.5" Maximum="100" />
                    </StackPanel>

                    <!-- Memory & Frequency -->
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0">
                            <TextBlock FontSize="10" Foreground="{DynamicResource TextFillColorTertiaryBrush}" Text="MEMORY" />
                            <TextBlock x:Name="_gpuMemoryValue" FontSize="18" FontWeight="Bold" Text="35.2%" Margin="0,4,0,0" />
                        </StackPanel>

                        <StackPanel Grid.Column="1" HorizontalAlignment="Right">
                            <TextBlock FontSize="10" Foreground="{DynamicResource TextFillColorTertiaryBrush}" Text="FREQUENCY" HorizontalAlignment="Right" />
                            <TextBlock x:Name="_gpuFrequency" FontSize="18" FontWeight="Bold" Text="900 MHz" Margin="0,4,0,0" HorizontalAlignment="Right" />
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </Border>
        </Grid>

        <!-- ═══════════════════════════════════════════════════════════════════════════════ -->
        <!-- COOLING & POWER OVERVIEW (3 COLUMN CARDS) -->
        <!-- ═══════════════════════════════════════════════════════════════════════════════ -->
        <Grid Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="12" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="12" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!-- CPU Cooling Card -->
            <Border Grid.Column="0" Style="{StaticResource MetricCard}">
                <StackPanel HorizontalAlignment="Center">
                    <wpfui:SymbolIcon Symbol="WeatherHailNight20" FontSize="24" Foreground="{DynamicResource SystemAccentColorPrimaryBrush}" HorizontalAlignment="Center" />
                    <TextBlock FontSize="10" Foreground="{DynamicResource TextFillColorTertiaryBrush}" Text="CPU COOLING" HorizontalAlignment="Center" Margin="0,8,0,4" />
                    <TextBlock x:Name="_cpuFans" FontSize="20" FontWeight="Bold" Text="2100 RPM" HorizontalAlignment="Center" />
                </StackPanel>
            </Border>

            <!-- GPU Cooling Card -->
            <Border Grid.Column="2" Style="{StaticResource MetricCard}">
                <StackPanel HorizontalAlignment="Center">
                    <wpfui:SymbolIcon Symbol="WeatherHailNight20" FontSize="24" Foreground="{DynamicResource SystemAccentColorPrimaryBrush}" HorizontalAlignment="Center" />
                    <TextBlock FontSize="10" Foreground="{DynamicResource TextFillColorTertiaryBrush}" Text="GPU COOLING" HorizontalAlignment="Center" Margin="0,8,0,4" />
                    <TextBlock x:Name="_gpuFans" FontSize="20" FontWeight="Bold" Text="1550 RPM" HorizontalAlignment="Center" />
                </StackPanel>
            </Border>

            <!-- Total Power Card -->
            <Border Grid.Column="4" Style="{StaticResource MetricCard}">
                <StackPanel HorizontalAlignment="Center">
                    <wpfui:SymbolIcon Symbol="BatteryCharge20" FontSize="24" Foreground="{DynamicResource SystemAccentColorPrimaryBrush}" HorizontalAlignment="Center" />
                    <TextBlock FontSize="10" Foreground="{DynamicResource TextFillColorTertiaryBrush}" Text="TOTAL POWER" HorizontalAlignment="Center" Margin="0,8,0,4" />
                    <TextBlock x:Name="_totalPowerValue" FontSize="20" FontWeight="Bold" Text="23.5W" HorizontalAlignment="Center" />
                </StackPanel>
            </Border>
        </Grid>

        <!-- ═══════════════════════════════════════════════════════════════════════════════ -->
        <!-- BATTERY & POWER BREAKDOWN -->
        <!-- ═══════════════════════════════════════════════════════════════════════════════ -->
        <Border Style="{StaticResource GlassCard}" Margin="0,0,0,20">
            <StackPanel>
                <!-- Header -->
                <Grid Margin="0,0,0,16">
                    <StackPanel Orientation="Horizontal">
                        <wpfui:SymbolIcon Symbol="Battery1020" FontSize="20" Foreground="{StaticResource AccentGradient}" Margin="0,0,10,0" />
                        <TextBlock FontSize="16" FontWeight="Bold" Text="BATTERY AND POWER" VerticalAlignment="Center" />
                    </StackPanel>
                </Grid>

                <!-- Battery Status -->
                <Border Style="{StaticResource MetricCard}" Margin="0,0,0,16">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0">
                            <TextBlock FontSize="10" Foreground="{DynamicResource TextFillColorTertiaryBrush}" Text="BATTERY LEVEL" />
                            <TextBlock FontSize="32" FontWeight="Bold" Margin="0,8,0,4">
                                <Run x:Name="_batteryPercent" Text="85%" />
                            </TextBlock>
                            <ProgressBar x:Name="_batteryBar" Style="{StaticResource EliteProgressBar}" Foreground="{StaticResource SuccessGradient}" Value="85" Maximum="100" Height="8" />

                            <Grid Margin="0,12,0,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>

                                <TextBlock Grid.Row="0" Grid.Column="0" FontSize="10" Foreground="{DynamicResource TextFillColorTertiaryBrush}" Text="Discharge:" Margin="0,0,8,4" />
                                <TextBlock Grid.Row="0" Grid.Column="1" x:Name="_batteryDischarge" FontSize="10" FontWeight="SemiBold" Text="23.5W" Margin="0,0,0,4" />

                                <TextBlock Grid.Row="1" Grid.Column="0" FontSize="10" Foreground="{DynamicResource TextFillColorTertiaryBrush}" Text="Runtime:" Margin="0,0,8,0" />
                                <TextBlock Grid.Row="1" Grid.Column="1" x:Name="_batteryRuntime" FontSize="10" FontWeight="SemiBold" Foreground="{DynamicResource SystemAccentColorPrimaryBrush}" Text="3h 45m" />
                            </Grid>
                        </StackPanel>

                        <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="24,0,0,0">
                            <TextBlock FontSize="10" Foreground="{DynamicResource TextFillColorTertiaryBrush}" Text="TEMPERATURE" HorizontalAlignment="Center" />
                            <TextBlock x:Name="_batteryTemp" FontSize="24" FontWeight="Bold" Text="32.5°C" Margin="0,4,0,0" HorizontalAlignment="Center" />
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Power Breakdown -->
                <TextBlock FontSize="11" FontWeight="SemiBold" Foreground="{DynamicResource TextFillColorSecondaryBrush}" Text="POWER BREAKDOWN" Margin="0,0,0,12" />

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <!-- CPU Power -->
                    <TextBlock Grid.Row="0" Grid.Column="0" FontSize="11" Text="CPU" Margin="0,0,16,8" VerticalAlignment="Center" />
                    <ProgressBar Grid.Row="0" Grid.Column="1" Style="{StaticResource EliteProgressBarCompact}" Foreground="{StaticResource AccentGradient}" Value="52" Maximum="100" Margin="0,0,12,8" />
                    <TextBlock x:Name="_cpuPowerPercent" Grid.Row="0" Grid.Column="2" FontSize="11" FontWeight="SemiBold" Text="12.3W (52%)" Margin="0,0,0,8" VerticalAlignment="Center" />

                    <!-- GPU Power -->
                    <TextBlock Grid.Row="1" Grid.Column="0" FontSize="11" Text="GPU" Margin="0,0,16,8" VerticalAlignment="Center" />
                    <ProgressBar x:Name="_gpuPowerBar" Grid.Row="1" Grid.Column="1" Style="{StaticResource EliteProgressBarCompact}" Foreground="{StaticResource AccentGradient}" Value="18" Maximum="100" Margin="0,0,12,8" />
                    <TextBlock x:Name="_gpuPower" Grid.Row="1" Grid.Column="2" FontSize="11" FontWeight="SemiBold" Text="4.2W (18%)" Margin="0,0,0,8" VerticalAlignment="Center" />

                    <!-- Platform Power -->
                    <TextBlock Grid.Row="2" Grid.Column="0" FontSize="11" Text="Platform" Margin="0,0,16,0" VerticalAlignment="Center" />
                    <ProgressBar Grid.Row="2" Grid.Column="1" Style="{StaticResource EliteProgressBarCompact}" Foreground="{StaticResource AccentGradient}" Value="30" Maximum="100" Margin="0,0,12,0" />
                    <TextBlock Grid.Row="2" Grid.Column="2" FontSize="11" FontWeight="SemiBold" Text="7.0W (30%)" VerticalAlignment="Center" />
                </Grid>
            </StackPanel>
        </Border>

        <!-- ═══════════════════════════════════════════════════════════════════════════════ -->
        <!-- SYSTEM RESOURCES -->
        <!-- ═══════════════════════════════════════════════════════════════════════════════ -->
        <Border Style="{StaticResource GlassCard}" Margin="0,0,0,20">
            <StackPanel>
                <!-- Header -->
                <Grid Margin="0,0,0,16">
                    <StackPanel Orientation="Horizontal">
                        <wpfui:SymbolIcon Symbol="DeveloperBoardSearch20" FontSize="20" Foreground="{StaticResource AccentGradient}" Margin="0,0,10,0" />
                        <TextBlock FontSize="16" FontWeight="Bold" Text="SYSTEM RESOURCES" VerticalAlignment="Center" />
                    </StackPanel>
                </Grid>

                <!-- Memory Usage -->
                <StackPanel Margin="0,0,0,16">
                    <Grid Margin="0,0,0,8">
                        <TextBlock FontSize="11" FontWeight="SemiBold" Foreground="{DynamicResource TextFillColorSecondaryBrush}" Text="MEMORY USAGE" />
                        <TextBlock FontSize="16" FontWeight="Bold" HorizontalAlignment="Right">
                            <Run x:Name="_memoryPercent" Text="62.3%" />
                        </TextBlock>
                    </Grid>
                    <ProgressBar x:Name="_memoryBar" Style="{StaticResource EliteProgressBar}" Foreground="{StaticResource AccentGradient}" Value="62.3" Maximum="100" Height="8" />
                </StackPanel>

                <!-- Storage Usage -->
                <StackPanel Margin="0,0,0,16">
                    <Grid Margin="0,0,0,8">
                        <TextBlock FontSize="11" FontWeight="SemiBold" Foreground="{DynamicResource TextFillColorSecondaryBrush}" Text="STORAGE [C:]" />
                        <TextBlock x:Name="_storageText" FontSize="16" FontWeight="Bold" HorizontalAlignment="Right" Text="Loading..." />
                    </Grid>
                    <ProgressBar x:Name="_storageBar" Style="{StaticResource EliteProgressBar}" Foreground="{StaticResource AccentGradient}" Value="58.5" Maximum="100" Height="8" />
                </StackPanel>

                <!-- Disk & Network I/O -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0">
                        <TextBlock FontSize="10" Foreground="{DynamicResource TextFillColorTertiaryBrush}" Text="DISK I/O" />
                        <TextBlock x:Name="_diskIO" FontSize="16" FontWeight="Bold" Text="-- MB/s" Margin="0,4,0,0" />
                    </StackPanel>

                    <StackPanel Grid.Column="1" HorizontalAlignment="Right">
                        <TextBlock FontSize="10" Foreground="{DynamicResource TextFillColorTertiaryBrush}" Text="NETWORK I/O" HorizontalAlignment="Right" />
                        <TextBlock x:Name="_networkIO" FontSize="16" FontWeight="Bold" Text="-- Mb/s" Margin="0,4,0,0" HorizontalAlignment="Right" />
                    </StackPanel>
                </Grid>
            </StackPanel>
        </Border>

        <!-- ═══════════════════════════════════════════════════════════════════════════════ -->
        <!-- INTEGRATED GPU INFORMATION -->
        <!-- ═══════════════════════════════════════════════════════════════════════════════ -->
        <Border Style="{StaticResource GlassCard}" Margin="0,0,0,20">
            <StackPanel>
                <!-- Header -->
                <Grid Margin="0,0,0,16">
                    <StackPanel Orientation="Horizontal">
                        <wpfui:SymbolIcon Symbol="TabDesktopImage20" FontSize="20" Foreground="{StaticResource AccentGradient}" Margin="0,0,10,0" />
                        <TextBlock FontSize="16" FontWeight="Bold" Text="INTEGRATED GPU" VerticalAlignment="Center" />
                    </StackPanel>
                </Grid>

                <!-- iGPU Info -->
                <Border Style="{StaticResource MetricCard}" Margin="0,0,0,12">
                    <StackPanel>
                        <TextBlock FontSize="10" Foreground="{DynamicResource TextFillColorTertiaryBrush}" Text="INTEGRATED GRAPHICS" />
                        <TextBlock x:Name="_igpuModel" FontSize="13" FontWeight="SemiBold" Text="Intel Iris Xe Graphics" Margin="0,4,0,2" />
                        <TextBlock x:Name="_igpuStatus" FontSize="10" Foreground="{DynamicResource TextFillColorSecondaryBrush}" Text="Active" />
                    </StackPanel>
                </Border>

                <!-- iGPU Metrics -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0">
                        <TextBlock FontSize="10" Foreground="{DynamicResource TextFillColorTertiaryBrush}" Text="UTILIZATION" />
                        <TextBlock x:Name="_igpuUtilization" FontSize="18" FontWeight="Bold" Text="8.5%" Margin="0,4,0,0" />
                    </StackPanel>

                    <StackPanel Grid.Column="1" HorizontalAlignment="Center">
                        <TextBlock FontSize="10" Foreground="{DynamicResource TextFillColorTertiaryBrush}" Text="FREQUENCY" HorizontalAlignment="Center" />
                        <TextBlock x:Name="_igpuFrequency" FontSize="18" FontWeight="Bold" Text="450 MHz" Margin="0,4,0,0" HorizontalAlignment="Center" />
                    </StackPanel>

                    <StackPanel Grid.Column="2" HorizontalAlignment="Right">
                        <TextBlock FontSize="10" Foreground="{DynamicResource TextFillColorTertiaryBrush}" Text="TEMPERATURE" HorizontalAlignment="Right" />
                        <TextBlock x:Name="_igpuTemperature" FontSize="18" FontWeight="Bold" Text="42°C" Margin="0,4,0,0" HorizontalAlignment="Right" />
                    </StackPanel>
                </Grid>
            </StackPanel>
        </Border>

        <!-- ═══════════════════════════════════════════════════════════════════════════════ -->
        <!-- TOP PROCESSES (HIGH CPU/GPU USAGE) -->
        <!-- ═══════════════════════════════════════════════════════════════════════════════ -->
        <Border Style="{StaticResource GlassCard}" Margin="0,0,0,20">
            <StackPanel>
                <!-- Header -->
                <Grid Margin="0,0,0,16">
                    <StackPanel Orientation="Horizontal">
                        <wpfui:SymbolIcon Symbol="TaskListSquareLtr20" FontSize="20" Foreground="{StaticResource WarningGradient}" Margin="0,0,10,0" />
                        <TextBlock FontSize="16" FontWeight="Bold" Text="TOP RESOURCE CONSUMERS" VerticalAlignment="Center" />
                    </StackPanel>
                </Grid>

                <!-- Top CPU Processes -->
                <TextBlock FontSize="11" FontWeight="SemiBold" Foreground="{DynamicResource TextFillColorSecondaryBrush}" Text="TOP CPU PROCESSES" Margin="0,0,0,8" />
                <Border Style="{StaticResource MetricCard}" Margin="0,0,0,16">
                    <StackPanel>
                        <!-- Process 1 -->
                        <Grid Margin="0,0,0,8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <TextBlock x:Name="_topCpuProcess1" Grid.Column="0" FontSize="12" FontWeight="Medium" Text="chrome.exe" />
                            <TextBlock x:Name="_topCpuProcess1Usage" Grid.Column="1" FontSize="12" FontWeight="Bold" Foreground="{StaticResource WarningGradient}" Text="12.5%" />
                        </Grid>

                        <!-- Process 2 -->
                        <Grid Margin="0,0,0,8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <TextBlock x:Name="_topCpuProcess2" Grid.Column="0" FontSize="12" FontWeight="Medium" Text="System" />
                            <TextBlock x:Name="_topCpuProcess2Usage" Grid.Column="1" FontSize="12" FontWeight="Bold" Text="5.2%" />
                        </Grid>

                        <!-- Process 3 -->
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <TextBlock x:Name="_topCpuProcess3" Grid.Column="0" FontSize="12" FontWeight="Medium" Text="explorer.exe" />
                            <TextBlock x:Name="_topCpuProcess3Usage" Grid.Column="1" FontSize="12" FontWeight="Bold" Text="2.1%" />
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Top GPU Processes (if available) -->
                <TextBlock FontSize="11" FontWeight="SemiBold" Foreground="{DynamicResource TextFillColorSecondaryBrush}" Text="TOP GPU PROCESSES" Margin="0,0,0,8" />
                <Border Style="{StaticResource MetricCard}">
                    <StackPanel>
                        <!-- GPU Process 1 -->
                        <Grid Margin="0,0,0,8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <TextBlock x:Name="_topGpuProcess1" Grid.Column="0" FontSize="12" FontWeight="Medium" Text="dwm.exe" />
                            <TextBlock x:Name="_topGpuProcess1Usage" Grid.Column="1" FontSize="12" FontWeight="Bold" Foreground="{StaticResource WarningGradient}" Text="8.5%" />
                        </Grid>

                        <!-- GPU Process 2 -->
                        <Grid Margin="0,0,0,8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <TextBlock x:Name="_topGpuProcess2" Grid.Column="0" FontSize="12" FontWeight="Medium" Text="chrome.exe" />
                            <TextBlock x:Name="_topGpuProcess2Usage" Grid.Column="1" FontSize="12" FontWeight="Bold" Text="3.2%" />
                        </Grid>

                        <!-- GPU Process 3 -->
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <TextBlock x:Name="_topGpuProcess3" Grid.Column="0" FontSize="12" FontWeight="Medium" Text="System" />
                            <TextBlock x:Name="_topGpuProcess3Usage" Grid.Column="1" FontSize="12" FontWeight="Bold" Text="1.5%" />
                        </Grid>
                    </StackPanel>
                </Border>
            </StackPanel>
        </Border>

        <!-- ═══════════════════════════════════════════════════════════════════════════════ -->
        <!-- OPTIMIZATION STATUS & RECOMMENDATIONS -->
        <!-- ═══════════════════════════════════════════════════════════════════════════════ -->
        <Border Style="{StaticResource GlassCard}">
            <StackPanel>
                <!-- Header -->
                <Grid Margin="0,0,0,16">
                    <StackPanel Orientation="Horizontal">
                        <wpfui:SymbolIcon Symbol="Premium20" FontSize="20" Foreground="{StaticResource AccentGradient}" Margin="0,0,10,0" />
                        <TextBlock FontSize="16" FontWeight="Bold" Text="AI OPTIMIZATION STATUS" VerticalAlignment="Center" />
                    </StackPanel>
                </Grid>

                <!-- Recommendations Grid -->
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="20" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <!-- Power Mode Recommendation -->
                    <wpfui:SymbolIcon Grid.Row="0" Grid.Column="0" Symbol="Flash20" FontSize="16" Foreground="{DynamicResource SystemFillColorCautionBrush}" VerticalAlignment="Center" Margin="0,0,12,12" />
                    <StackPanel Grid.Row="0" Grid.Column="1" Margin="0,0,0,12">
                        <TextBlock FontSize="10" Foreground="{DynamicResource TextFillColorTertiaryBrush}" Text="RECOMMENDED POWER MODE" />
                        <TextBlock x:Name="_recommendedPowerMode" FontSize="13" FontWeight="SemiBold" Text="BALANCED" Margin="0,2,0,0" />
                    </StackPanel>

                    <!-- GPU Mode Recommendation -->
                    <wpfui:SymbolIcon Grid.Row="1" Grid.Column="0" Symbol="DesktopMac20" FontSize="16" Foreground="{DynamicResource SystemFillColorSuccessBrush}" VerticalAlignment="Center" Margin="0,0,12,12" />
                    <StackPanel Grid.Row="1" Grid.Column="1" Margin="0,0,0,12">
                        <TextBlock FontSize="10" Foreground="{DynamicResource TextFillColorTertiaryBrush}" Text="RECOMMENDED GPU MODE" />
                        <TextBlock x:Name="_recommendedGPUMode" FontSize="13" FontWeight="SemiBold" Text="iGPU Mode (Power Saver)" Margin="0,2,0,0" />
                    </StackPanel>

                    <!-- Thermal Mode Recommendation -->
                    <wpfui:SymbolIcon Grid.Row="2" Grid.Column="0" Symbol="Temperature20" FontSize="16" Foreground="{DynamicResource SystemFillColorSuccessBrush}" VerticalAlignment="Center" Margin="0,0,12,0" />
                    <StackPanel Grid.Row="2" Grid.Column="1">
                        <TextBlock FontSize="10" Foreground="{DynamicResource TextFillColorTertiaryBrush}" Text="RECOMMENDED THERMAL MODE" />
                        <TextBlock x:Name="_recommendedThermalMode" FontSize="13" FontWeight="SemiBold" Text="ADAPTIVE COOLING" Margin="0,2,0,0" />
                    </StackPanel>

                    <!-- Overall System Health -->
                    <Border Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="2"
                            Background="{StaticResource SuccessGradient}"
                            CornerRadius="8"
                            Padding="16,12">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <wpfui:SymbolIcon Symbol="CheckmarkCircle24" FontSize="20" Foreground="White" Margin="0,0,12,0" />
                            <TextBlock FontSize="14" FontWeight="Bold" Foreground="White" Text="ALL SYSTEMS OPTIMAL" VerticalAlignment="Center" />
                        </StackPanel>
                    </Border>
                </Grid>
            </StackPanel>
        </Border>

        <!-- Hidden UI Elements (referenced in code-behind) -->
        <Grid Visibility="Collapsed">
            <TextBlock x:Name="_cpuArchitecture" />
            <TextBlock x:Name="_totalPowerBar" />
            <TextBlock x:Name="_totalPowerPercent" />
            <TextBlock x:Name="_thermalMode" />
            <TextBlock x:Name="_recommendedPowerModeIcon" />
            <TextBlock x:Name="_recommendedGPUModeIcon" />
            <TextBlock x:Name="_recommendedThermalModeIcon" />
            <ProgressBar x:Name="_cpuPowerBar" />
        </Grid>

    </StackPanel>
</UserControl>
