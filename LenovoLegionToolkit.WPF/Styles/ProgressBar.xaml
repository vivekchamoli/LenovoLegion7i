<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!--  ReSharper disable Xaml.StaticResourceNotResolved  -->

    <!--
        Elite Theme-Aware ProgressBar Style
        Works seamlessly with both Dark and Light themes
        Optimized for dashboard controls and system monitoring
    -->
    <Style x:Key="EliteProgressBar" TargetType="ProgressBar">
        <Setter Property="Height" Value="8" />
        <Setter Property="Background" Value="{DynamicResource ControlAltFillColorTertiaryBrush}" />
        <Setter Property="Foreground" Value="{DynamicResource SystemAccentColorPrimaryBrush}" />
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="SnapsToDevicePixels" Value="True" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ProgressBar">
                    <Grid>
                        <!-- Background Track -->
                        <Border
                            Background="{TemplateBinding Background}"
                            CornerRadius="4"
                            Opacity="0.3" />

                        <!-- Foreground Indicator Track -->
                        <Border
                            x:Name="PART_Track"
                            CornerRadius="4"
                            ClipToBounds="True">
                            <Border
                                x:Name="PART_Indicator"
                                Background="{TemplateBinding Foreground}"
                                HorizontalAlignment="Left"
                                CornerRadius="4">
                                <Border.Effect>
                                    <!-- Subtle glow effect for better visibility -->
                                    <DropShadowEffect
                                        Color="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=Foreground.(SolidColorBrush.Color)}"
                                        Opacity="0.4"
                                        BlurRadius="8"
                                        ShadowDepth="0" />
                                </Border.Effect>
                            </Border>
                        </Border>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Compact variant for smaller UI elements (6px height) -->
    <Style x:Key="EliteProgressBarCompact" TargetType="ProgressBar" BasedOn="{StaticResource EliteProgressBar}">
        <Setter Property="Height" Value="6" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ProgressBar">
                    <Grid>
                        <!-- Background Track -->
                        <Border
                            Background="{TemplateBinding Background}"
                            CornerRadius="3"
                            Opacity="0.3" />

                        <!-- Foreground Indicator Track -->
                        <Border
                            x:Name="PART_Track"
                            CornerRadius="3"
                            ClipToBounds="True">
                            <Border
                                x:Name="PART_Indicator"
                                Background="{TemplateBinding Foreground}"
                                HorizontalAlignment="Left"
                                CornerRadius="3">
                                <Border.Effect>
                                    <DropShadowEffect
                                        Color="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=Foreground.(SolidColorBrush.Color)}"
                                        Opacity="0.4"
                                        BlurRadius="6"
                                        ShadowDepth="0" />
                                </Border.Effect>
                            </Border>
                        </Border>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Large variant for prominent displays (10px height) -->
    <Style x:Key="EliteProgressBarLarge" TargetType="ProgressBar" BasedOn="{StaticResource EliteProgressBar}">
        <Setter Property="Height" Value="10" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ProgressBar">
                    <Grid>
                        <!-- Background Track -->
                        <Border
                            Background="{TemplateBinding Background}"
                            CornerRadius="5"
                            Opacity="0.3" />

                        <!-- Foreground Indicator Track -->
                        <Border
                            x:Name="PART_Track"
                            CornerRadius="5"
                            ClipToBounds="True">
                            <Border
                                x:Name="PART_Indicator"
                                Background="{TemplateBinding Foreground}"
                                HorizontalAlignment="Left"
                                CornerRadius="5">
                                <Border.Effect>
                                    <DropShadowEffect
                                        Color="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=Foreground.(SolidColorBrush.Color)}"
                                        Opacity="0.5"
                                        BlurRadius="10"
                                        ShadowDepth="0" />
                                </Border.Effect>
                            </Border>
                        </Border>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!--  ReSharper restore Xaml.StaticResourceNotResolved  -->

</ResourceDictionary>
